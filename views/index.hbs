<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="style.css">
    <script> function copyTexts() {
            var copyText = document.getElementById('result');
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(copyText.value)
        }</script>
</head>

<body>
    <img src="key.jpeg" class="image" width="500" height="150"><br>

    <form action="/encrypt" method="post">
        <div class="text1">
            <textarea type="text" rows="17" cols="60" id="result">{{encryptedText}}</textarea><br>
        </div>
        <div class="secretkey">
            KEY : <input type="text" name="key" value="{{key}}" required>
            IV : <input type="text" name="secretiv" value="{{iv}}" required>
            <br><br>
            <textarea type="text" rows="8" cols="50" id="request" name="text" class="text2">{{text}}</textarea><br>
            <button type="submit" size="25" class="button1" name="id" value="1">ENCRYPT</button>
            <button type="submit" size="25" class="button2" name="id" value="2">DECRYPT</button>
        </div>
    </form>
     <button type="submit" size="25" class="button3" onclick="document.getElementById(
     'request').value = ''">CLEAR</button>
         <button type="submit" class="button4" onclick="copyTexts()">COPY</button><br>

</body>

</html>